{
  "manifest_version": 3,
  "name": "Color Theme Changer",
  "version": "1.0",
  "description": "Change the theme of any website with random colors.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon.png",
      "48": "./icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension.js"],
      "css": [ "extension.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "openExtension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Open the extension"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "background",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["libs/three.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}