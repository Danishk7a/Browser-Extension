{
  "manifest_version": 3,
  "name": "Sidebar Extension",
  "version": "1.0",
  "description": "A simple sidebar extension using Chrome's Sidebar API",
  "permissions": [
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Sidebar"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  }
} 